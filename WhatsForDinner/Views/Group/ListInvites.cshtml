@model List<Groups>
@{
    ViewData["Title"] = "ListInvites";
}
@if (Model.Count != 0)
{
    <h1>Group Invites</h1>

    <table class="table text-center" style="width: 300px; max-width: 100%">
        <thead class="thead-dark">
            <tr>
                <th>Group</th>
                <th></th>
            </tr>
        </thead>
        @foreach (Groups invite in Model)
        {
            <tr>
                <td><a class="groupname btn btn-block" href="../Group/GroupMembers?id=@invite.Id">@invite.Name</a></td>
                <td><a href="../Group/JoinGroup?id=@invite.Id" class="btn btn-outline-success">Accept</a></td>
            </tr>
        }
    </table>

    <style>
        a.groupname:hover {
            background-color: dodgerblue
        }
    </style>
}
else
{
    <h3>You Have No Invites</h3>
}
